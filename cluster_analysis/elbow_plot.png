# elbow_plot.py
# Generates elbow_plot.png using your file: UVB-76.csv

import pandas as pd
import matplotlib.pyplot as plt
from sklearn.cluster import KMeans
import os

# === CONFIG: Your actual file name ===
CSV_PATH = "UVB-76.csv"  # ‚Üê This matches your file

# Check if file exists
if not os.path.exists(CSV_PATH):
    print(f"ERROR: {CSV_PATH} not found!")
    print("Make sure:")
    print("  1. You downloaded UVB-76.csv from the repo")
    print("  2. It's in the same folder as this script")
    exit()

# Load data
data = pd.read_csv(CSV_PATH)
print(f"Loaded {len(data)} rows from {CSV_PATH}")

# === REQUIRED COLUMNS: month, day_of_year ===
# If your file uses different names, update below:
try:
    X = data[['month', 'day_of_year']].values
except KeyError as e:
    print(f"Column not found: {e}")
    print("Your CSV must have columns: 'month' and 'day_of_year'")
    exit()

# Calculate inertia
inertias = []
for k in range(1, 11):
    kmeans = KMeans(n_clusters=k, random_state=42)
    kmeans.fit(X)
    inertias.append(kmeans.inertia_)

# Plot
plt.figure(figsize=(7, 5))
plt.plot(range(1, 11), inertias, 'bo-', markersize=8, linewidth=2)
plt.title('Elbow Method: Optimal k for UVB-76 Spike-Day Clustering', 
          fontsize=14, fontweight='bold')
plt.xlabel('Number of clusters (k)', fontsize=12)
plt.ylabel('Inertia', fontsize=12)
plt.axvline(3, color='red', linestyle='--', linewidth=2, label='k=3 (chosen)')
plt.legend()
plt.grid(True, alpha=0.3)
plt.tight_layout()

# Save
output_path = "elbow_plot.png"
plt.savefig(output_path, dpi=150, bbox_inches='tight')
print(f"SUCCESS: {output_path} saved!")
print("Upload this image to cluster_analysis/ on GitHub")
